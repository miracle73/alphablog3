<h2 class = "align5">LOGIN </h2>
  <%= form_for(:session, :html => {class: "form-horizontal", role: "form"},url: login_path) do |f|%>
   
   <div class="form-group">
    <div class="control-label col-sm-8">
     <%= f.label :email %> <br/>
    </div>
	<div class="col-sm-10">
     <%= f.email_field :email, class: "form-control", placeholder: " ", autocomplete: "off" %>
	</div>
   </div>
   <div class="form-group">
    <div class="control-label col-sm-8">
     <%= f.label :password %> <br/>
    </div>
	<div class="col-sm-10">
     <%= f.password_field :password, class: "form-control", placeholder: " ", autocomplete: "off"  %>
	</div>
   </div>
   <div class="form-group">
    <div class=" col-sm-8">
     <%= f.submit "login", class: "btn btn-primary btn-lg"%>
    </div>
   </div>
  <%end%>
  <div class="col-sm-12 ">
   [<%= link_to "Back to articles listing", articles_path %>]
  </div>